set -euo pipefail

# Get list of proto files to lint
protofiles=$(git diff --cached --name-only --diff-filter=ACM -- '*.proto')
if [ -z "$protofiles" ]; then
  exit 0
fi

# First, try to autofix any issues
# shellcheck disable=SC2086
if go tool protolint -fix $protofiles >/dev/null 2>&1; then
  exit 0
fi

# Run protolint again without -fix to check for remaining issues
# shellcheck disable=SC2086
output=$(go tool protolint $protofiles 2>&1)
exit_code=$?

if [ $exit_code -eq 0 ]; then
  echo "Fixed proto files"
  exit 0
else
  echo "$output"
  exit $exit_code
fi
